<apex:page sidebar="false" showHeader="false" applyHtmlTag="false" applyBodyTag="false"
           standardStylesheets="false" ContentType="image/svg+xml; charset=UTF-8"
           controller="slds_icon_utility_controller"
>
    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink"
         width="{! $CurrentPage.parameters.width}"
         height="{! $CurrentPage.parameters.height}"
         baseProfile="full"
         style="{!'fill: #' & $CurrentPage.parameters.color & ';'}">
        <use xlink:href="{!'#' + $CurrentPage.parameters.name}"></use>
        {!svgSymbol}
    </svg>
</apex:page>